{
    "env": {
        "browser": true,
        "es2020": true,
        "cypress/globals": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:cypress/recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": [
        "cypress",
        "react"
    ],
    "rules": {
        "no-promise-executor-return": "error",
        "require-atomic-updates": "error",
        "require-await": "error"
    }
}
